{
  "name": "bret.io",
  "version": "1.0.0",
  "description": "profesh website",
  "main": "index.js",
  "scripts": {
    "test": "run-s test:*",
    "test:deps": "dependency-check ./package.json --entry src/index.js",
    "test:lint": "standard | snazzy",
    "test:tape": "tape test.js | tap-format-spec",
    "build": "npm run clean && run-p build:*",
    "build:css": "postcss src/index.css -o dist/bundle.css",
    "build:js": "browserify src/index.js --debug | exorcist dist/bundle.js.map > dist/bundle.js",
    "build:sw": "browserify src/sw.js --debug | exorcist dist/sw.js.map > dist/sw.js",
    "build:md": "sitedown src -b dist -l src/layout.html",
    "build:static": "cpx 'src/static/*' dist/static",
    "watch": "npm run clean && run-p watch:* build:static",
    "watch:css": "npm run build:css -- --watch",
    "watch:js": "budo src/index.js:bundle.js --dir dist --live --open",
    "watch:sw": "watchify src/sw.js --debug -o dist/sw.js",
    "watch:md": "npm run build:md -- -w",
    "watch:static": "npm run build:static -- --watch",
    "clean": "rimraf dist && mkdirp dist",
    "start": "npm run watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bcomnes/bret.io.git"
  },
  "keywords": [
    "website",
    "bret",
    "comnes"
  ],
  "author": "Bret Comnes",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bcomnes/bret.io/issues"
  },
  "homepage": "https://github.com/bcomnes/bret.io#readme",
  "devDependencies": {
    "@tap-format/spec": "^0.2.0",
    "autoprefixer": "^8.0.0",
    "browserify": "^16.0.0",
    "budo": "^11.0.0",
    "cpx": "^1.5.0",
    "dependency-check": "^3.0.0",
    "exorcist": "^1.0.0",
    "go-fonts.css": "^1.0.0",
    "highlight.js": "^9.8.0",
    "mkdirp": "^0.5.1",
    "node-fetch": "^2.1.1",
    "npm-run-all": "^4.0.0",
    "postcss": "^6.0.19",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-cli": "^5.0.0",
    "postcss-import": "^11.0.0",
    "postcss-reporter": "^5.0.0",
    "postcss-url": "^7.3.1",
    "rimraf": "^2.5.4",
    "sitedown": "^3.0.1",
    "snazzy": "^7.0.0",
    "standard": "^11.0.0",
    "style.css": "^1.0.0-beta-1",
    "tape": "^4.6.2",
    "top-bar.css": "^1.2.0",
    "watchify": "^3.11.0"
  },
  "dependencies": {
    "global": "^4.3.2"
  }
}
